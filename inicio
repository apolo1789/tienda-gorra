    <script>
        let carrito = [];

        function agregarAlCarrito(nombre, precio) {
            carrito.push({ nombre, precio });
            alert(nombre + " ha sido aÃ±adido al carrito por $" + precio + " COP.");
        }

        function verCarrito() {
            let mensaje = "Productos en el carrito:\n";
            carrito.forEach((producto, index) => {
                mensaje += (index + 1) + ". " + producto.nombre + " - $" + producto.precio + " COP\n";
            });
            mensaje += "\nÂ¿Deseas eliminar algÃºn producto? Escribe el nÃºmero del producto para eliminarlo o presiona Cancelar para cerrar.";
            let eliminar = prompt(mensaje);
            if (eliminar && !isNaN(eliminar) && eliminar <= carrito.length && eliminar > 0) {
                carrito.splice(eliminar - 1, 1);
                alert("Producto eliminado del carrito.");
            }
        }
    </script>
